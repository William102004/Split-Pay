<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SplitPayApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SplitPayApp"
    Shell.FlyoutBehavior="Disabled"
    Title="SplitPayApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="HomeScreenView"
        ContentTemplate="{DataTemplate local:Views.HomeScreenView}"
        Route="HomeScreenView" />
    <ShellContent
        Title="FamilyMembersView"
        ContentTemplate="{DataTemplate local:Views.FamilyMembersView}"
        Route="FamilyMembersView" />
    <ShellContent   
        Title="ExpenseView"
        ContentTemplate="{DataTemplate local:Views.ExpenseView}"
        Route="ExpenseView" />
    
    

</Shell>