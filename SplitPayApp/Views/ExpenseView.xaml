<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SplitPayApp.Views.ExpenseView"
             BackgroundColor="#667eea">
    
    <ContentView.Resources>
        <ResourceDictionary>
            <!-- Styles for mobile optimization -->
            <Style x:Key="HeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,10,0,20"/>
            </Style>
            
            <Style x:Key="SectionTitleStyle" TargetType="Label">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#333333"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>
            
            <Style x:Key="FieldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#555555"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>
            
            <Style x:Key="InputStyle" TargetType="Entry">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>
            
            <Style x:Key="PickerStyle" TargetType="Picker">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>
            
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4facfe"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>
            
            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#ff6b6b"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="35"/>
                <Setter Property="WidthRequest" Value="70"/>
                <Setter Property="CornerRadius" Value="17"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <ScrollView>
        <StackLayout Padding="15" Spacing="20">
            
            <!-- Header -->
            <Label Text="Split Pay Expense Tracker" 
                   Style="{StaticResource HeaderStyle}"/>
            
            <!-- Household Balance Display -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="20"
                   Padding="20">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Total Household Balance:" 
                           FontSize="18" 
                           VerticalOptions="Center"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding HouseholdBalance, StringFormat='${0:F2}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Green"
                           VerticalOptions="Center"/>          
                </StackLayout>
            </Frame>
            
            <!-- Add Expense Section -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="20"
                   Padding="20">
                
                <StackLayout Spacing="10">
                    <Label Text="Add New Expense" 
                           Style="{StaticResource SectionTitleStyle}"/>
                    
                    <!-- Member Selection -->
                    <StackLayout>
                        <Label Text="Select Member" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Picker Title="Choose a member..."
                                ItemsSource="{Binding FamilyMembers}"
                                SelectedItem="{Binding SelectedExpenseMember}"
                                ItemDisplayBinding="{Binding Name}"
                                Style="{StaticResource PickerStyle}"/>
                    </StackLayout>
                    
                    <!-- Expense Name -->
                    <StackLayout>
                        <Label Text="Expense Name" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Placeholder="Enter expense name"
                               Text="{Binding ExpenseName}"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Amount -->
                    <StackLayout>
                        <Label Text="Amount" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Placeholder="$0.00"
                               Text="{Binding Amount}"
                               Keyboard="Numeric"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Date Fields -->
                    <StackLayout>
                        <Label Text="Date" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Grid ColumnDefinitions="*,*,*" 
                              ColumnSpacing="10">
                            <Entry Grid.Column="0"
                                   Placeholder="MM"
                                   Text="{Binding Month}"
                                   Keyboard="Numeric"
                                   MaxLength="2"
                                   Style="{StaticResource InputStyle}"/>
                            <Entry Grid.Column="1"
                                   Placeholder="DD"
                                   Text="{Binding Day}"
                                   Keyboard="Numeric"
                                   MaxLength="2"
                                   Style="{StaticResource InputStyle}"/>
                            <Entry Grid.Column="2"
                                   Placeholder="YYYY"
                                   Text="{Binding Year}"
                                   Keyboard="Numeric"
                                   MaxLength="4"
                                   Style="{StaticResource InputStyle}"/>
                        </Grid>
                    </StackLayout>
                    
                    <!-- Category -->
                    <StackLayout>
                        <Label Text="Category" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Placeholder="e.g., Food, Transportation"
                               Text="{Binding Category}"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Description -->
                    <StackLayout>
                        <Label Text="Description (Optional)" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Placeholder="Optional description"
                               Text="{Binding Description}"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Recurring Expense -->
                    <StackLayout Orientation="Horizontal" 
                                 Spacing="10"
                                 Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding Recurring}" 
                                  Scale="1.2"/>
                        <Label Text="Recurring Expense" 
                               VerticalOptions="Center"
                               FontSize="16"/>
                    </StackLayout>
                    
                    <!-- Frequency (conditionally visible) -->
                    <StackLayout IsVisible="{Binding Recurring}">
                        <Label Text="Frequency" 
                               Style="{StaticResource FieldLabelStyle}"/>
                        <Entry Placeholder="e.g., Monthly, Weekly"
                               Text="{Binding Frequency}"
                               Style="{StaticResource InputStyle}"/>
                    </StackLayout>
                    
                    <!-- Add Button -->
                    <Button Text="Add Expense"
                            Clicked="AddExpenseClicked"
                            Style="{StaticResource PrimaryButtonStyle}"/>
                </StackLayout>
            </Frame>
            
            <!-- Expenses List Section -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="20"
                   Padding="20">
                
                <StackLayout Spacing="15">
                    <Label Text="Expenses by Member"
                           Style="{StaticResource SectionTitleStyle}"/>
                    
                    <!-- Members List -->
                    <CollectionView ItemsSource="{Binding FamilyMembers}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Frame BackgroundColor="#f8f9fa"
                                           HasShadow="False"
                                           CornerRadius="15"
                                           Padding="15">
                                        
                                        <StackLayout Spacing="15">
                                            <!-- Member Header -->
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       FontSize="18"
                                                       FontAttributes="Bold"
                                                       TextColor="#333333"
                                                       VerticalOptions="Center"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding Balance, StringFormat='${0:F2}'}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#4facfe"
                                                       VerticalOptions="Center"/>
                                            </Grid>
                                            
                                            <!-- Expenses List -->
                                            <CollectionView ItemsSource="{Binding expenses}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,0,0,10">
                                                            <Frame BackgroundColor="White"
                                                                   HasShadow="False"
                                                                   CornerRadius="12"
                                                                   Padding="15">
                                                                
                                                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                                                                      ColumnDefinitions="*,Auto">
                                                                    
                                                                    <!-- Expense Name -->
                                                                    <Label Grid.Row="0" Grid.Column="0"
                                                                           Text="{Binding name}"
                                                                           FontSize="16"
                                                                           FontAttributes="Bold"
                                                                           TextColor="#333333" />
                                                                    
                                                                    <!-- Amount -->
                                                                    <Label Grid.Row="0" Grid.Column="1"
                                                                           Text="{Binding amount, StringFormat='${0:F2}'}"
                                                                           FontSize="16"
                                                                           FontAttributes="Bold"
                                                                           TextColor="#28a745"
                                                                           HorizontalOptions="End" />
                                                                    
                                                                    <!-- Category -->
                                                                    <Label Grid.Row="1" Grid.Column="0"
                                                                           Text="{Binding category, StringFormat='Category: {0}'}"
                                                                           FontSize="14" 
                                                                           TextColor="#666666"
                                                                           IsVisible="{Binding category, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                                                    
                                                                    <!-- Description -->
                                                                    <Label Grid.Row="2" Grid.Column="0"
                                                                           Text="{Binding description}"
                                                                           FontSize="14"
                                                                           TextColor="#999999"
                                                                           IsVisible="{Binding description, Converter={StaticResource IsNotNullOrEmptyConverter}}" />
                                                                    
                                                                    <!-- Date -->
                                                                    <Label Grid.Row="3" Grid.Column="0"
                                                                           FontSize="14"
                                                                           TextColor="#999999">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="{Binding month, StringFormat='{0:D2}'}" />
                                                                                <Span Text="/" />
                                                                                <Span Text="{Binding Day, StringFormat='{0:D2}'}" />
                                                                                <Span Text="/" />
                                                                                <Span Text="{Binding year}" />
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    
                                                                    <!-- Frequency (for recurring expenses) -->
                                                                    <Label Grid.Row="4" Grid.Column="0"
                                                                           Text="{Binding frequency, StringFormat='Frequency: {0}'}"
                                                                           FontSize="14"
                                                                           TextColor="#999999"
                                                                           IsVisible="{Binding Recurring}" />
                                                                    
                                                                    <!-- Remove Button -->
                                                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="5"
                                                                            Text="Remove"
                                                                            Clicked="RemoveExpenseClicked"
                                                                            Style="{StaticResource DangerButtonStyle}"
                                                                            HorizontalOptions="End"
                                                                            VerticalOptions="Start" />
                                                                </Grid>
                                                            </Frame>
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                                
                                                <!-- Empty State -->
                                                <CollectionView.EmptyView>
                                                    <Label Text="No expenses yet"
                                                           HorizontalOptions="Center"
                                                           TextColor="#999999"
                                                           Margin="0,10"/>
                                                </CollectionView.EmptyView>
                                            </CollectionView>
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        
                        <!-- Empty State for Members -->
                        <CollectionView.EmptyView>
                            <StackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Padding="20">
                                <Label Text="ðŸ’¸"
                                       FontSize="48"
                                       HorizontalOptions="Center"/>
                                <Label Text="No family members added yet"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#666666"/>
                                <Label Text="Add family members first, then start tracking expenses!"
                                       FontSize="14"
                                       HorizontalOptions="Center"
                                       TextColor="#999999"
                                       Margin="0,5,0,0"/>
                            </StackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </Frame>
            
            <!-- Bottom Spacing for iPhone -->
            <BoxView HeightRequest="30" 
                     BackgroundColor="Transparent"/>
        </StackLayout>
    </ScrollView>
</ContentView>